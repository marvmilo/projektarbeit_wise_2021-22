<ETHERNETKRL>
    <CONFIGURATION>
        <EXTERNAL>
            <IP>x.x.x.x</IP><!--IP of RevPi-->
            <PORT>59152</PORT><!--Port of RevPi server-->
        </EXTERNAL>
    </CONFIGURATION>
    <RECEIVE>
        <XML>
            <ELEMENT Tag="recv/robot/movementclear" Type="BOOL" /><!--movementclearance for robot-->
            <ELEMENT Tag="recv/btp/position" Type="FRAME" /><!--position where the ball can be picked up-->
            <ELEMENT Tag="recv/btp/containernum" Type="INT" /><!--containerposition the ball needs to be placed in-->
        </XML>
    </RECEIVE>
    <SEND>
        <XML>
            <ELEMENT Tag="snd/robot/status" /><!--free configurable statusmessage the Robot can send-->
            <ELEMENT Tag="snd/robot/position" /><!--send information about robot position-->
            <ELEMENT Tag="snd/btp/isplaced" /><!--send true when ball is placed-->
        </XML>
    </SEND>
</ETHERNETKRL>

